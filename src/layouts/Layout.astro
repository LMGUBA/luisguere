<style is:global>
	:root {
		/* Minimalist Black & White Palette - Enhanced Contrast */
		--bg-color: #ffffff;
		--bg-secondary: #fafafa; /* Subtle background variation */
		--text-primary: #000000; /* Pure black for maximum contrast */
		--text-secondary: #6e6e73; /* Slightly darker gray */
		--accent-color: #000000;

		/* Enhanced Glassmorphism Variables */
		--glass-bg: rgba(255, 255, 255, 0.72);
		--glass-border: rgba(0, 0, 0, 0.12);
		--glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
		--glass-blur: 20px;

		/* Typography - San Francisco Style */
		--font-main: "SF Pro Display", "SF Pro Text", -apple-system,
			BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif,
			"Apple Color Emoji", "Segoe UI Emoji";
	}

	@media (prefers-color-scheme: dark) {
		:root {
			--bg-color: #000000;
			--bg-secondary: #0a0a0a;
			--text-primary: #ffffff; /* Pure white for maximum contrast */
			--text-secondary: #98989d;
			--accent-color: #ffffff;
			--glass-bg: rgba(20, 20, 20, 0.72);
			--glass-border: rgba(255, 255, 255, 0.18);
			--glass-shadow: 0 8px 32px rgba(0, 0, 0, 0.6);
		}
	}

	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	html {
		scroll-behavior: smooth;
		font-family: var(--font-main);
		background-color: var(--bg-color);
		color: var(--text-primary);
	}

	body {
		background-color: var(--bg-color);
		color: var(--text-primary);
		overflow-x: hidden;
		line-height: 1.5;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
		font-feature-settings: "kern" 1;
		font-kerning: normal;
	}

	/* Enhanced Glassmorphism Class */
	.glass {
		background: var(--glass-bg);
		backdrop-filter: blur(var(--glass-blur)) saturate(180%);
		-webkit-backdrop-filter: blur(var(--glass-blur)) saturate(180%);
		border: 1px solid var(--glass-border);
		border-radius: 0; /* Sharp corners as requested */
		box-shadow: var(--glass-shadow);
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.glass:hover {
		border-color: var(--text-primary);
		transform: translateY(-2px);
		box-shadow: 0 12px 40px rgba(0, 0, 0, 0.12);
	}

	/* Enhanced Animations */
	.fade-in {
		opacity: 0;
		transform: translateY(30px) scale(0.98);
		animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
	}

	@keyframes fadeInUp {
		to {
			opacity: 1;
			transform: translateY(0) scale(1);
		}
	}

	/* Staggered animation delays */
	.fade-in:nth-child(1) {
		animation-delay: 0.1s;
	}
	.fade-in:nth-child(2) {
		animation-delay: 0.2s;
	}
	.fade-in:nth-child(3) {
		animation-delay: 0.3s;
	}
	.fade-in:nth-child(4) {
		animation-delay: 0.4s;
	}
	.fade-in:nth-child(5) {
		animation-delay: 0.5s;
	}
	.fade-in:nth-child(6) {
		animation-delay: 0.6s;
	}

	/* Typography Utilities */
	.gradient-text {
		/* For black/white theme, gradient text is less common, but we can keep a subtle one or make it solid */
		background: linear-gradient(
			135deg,
			var(--text-primary) 0%,
			var(--text-secondary) 100%
		);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	/* Button Styles */
	.cyber-button {
		/* Keeping class name for compatibility, but restyling */
		background: var(--text-primary);
		color: var(--bg-color);
		border: 1px solid var(--text-primary);
		padding: 1rem 2rem;
		border-radius: 0; /* Sharp corners */
		font-family: var(--font-main);
		font-weight: 500;
		font-size: 1rem;
		cursor: pointer;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		display: inline-block;
		text-decoration: none;
	}

	.cyber-button:hover {
		background: transparent;
		color: var(--text-primary);
		transform: translateY(-2px);
		box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
	}

	/* Remove old pseudo-elements if they conflict with clean style */
	.cyber-button::before {
		display: none;
	}

	/* Section Title */
	.section-title {
		font-family: var(--font-main);
		font-size: 3rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 3rem;
		letter-spacing: -0.02em;
		color: var(--text-primary);
	}

	/* Remove the neon underline */
	.section-title::after {
		display: none;
	}

	/* Card Styles */
	.cyber-card {
		background: var(--glass-bg);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border: 1px solid var(--glass-border);
		border-radius: 0; /* Sharp corners */
		padding: 2rem;
		transition: all 0.3s ease;
		position: relative;
	}

	/* Remove neon borders */
	.cyber-card::before {
		display: none;
	}

	.cyber-card:hover {
		transform: translateY(-5px);
		border-color: var(--text-primary);
		box-shadow: var(--glass-shadow);
	}

	/* Scrollbar */
	::-webkit-scrollbar {
		width: 8px;
	}

	::-webkit-scrollbar-track {
		background: var(--bg-color);
	}

	::-webkit-scrollbar-thumb {
		background: var(--text-secondary);
		border-radius: 0;
	}

	::-webkit-scrollbar-thumb:hover {
		background: var(--text-primary);
	}
</style>
