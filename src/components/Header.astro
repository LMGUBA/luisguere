	.particle:nth-child(11) { left: 10%; top: 45%; animation-delay: 5s; }
	.particle:nth-child(12) { left: 90%; top: 15%; animation-delay: 6s; }
	.particle:nth-child(13) { left: 8%; top: 35%; animation-delay: 0.3s; }
	.particle:nth-child(14) { left: 18%; top: 75%; animation-delay: 1.3s; }
	.particle:nth-child(15) { left: 28%; top: 55%; animation-delay: 2.3s; }
	.particle:nth-child(16) { left: 38%; top: 85%; animation-delay: 3.3s; }
	.particle:nth-child(17) { left: 48%; top: 25%; animation-delay: 1.8s; }
	.particle:nth-child(18) { left: 58%; top: 65%; animation-delay: 2.8s; }
	.particle:nth-child(19) { left: 68%; top: 45%; animation-delay: 0.8s; }
	.particle:nth-child(20) { left: 78%; top: 85%; animation-delay: 3.8s; }

	.binary-particle {
		position: absolute;
		font-family: 'Orbitron', monospace;
		font-size: 12px;
		font-weight: 700;
		color: var(--cyber-cyan);
		animation: matrixFall 6s infinite linear;
		text-shadow: 0 0 8px var(--cyber-cyan);
		opacity: 0.8;
	}

	.binary-particle:nth-child(21) { left: 4%; animation-delay: 0.3s; }
	.binary-particle:nth-child(22) { left: 12%; animation-delay: 2.1s; }
	.binary-particle:nth-child(23) { left: 23%; animation-delay: 0.7s; }
	.binary-particle:nth-child(24) { left: 31%; animation-delay: 3.4s; }
	.binary-particle:nth-child(25) { left: 47%; animation-delay: 1.2s; }
	.binary-particle:nth-child(26) { left: 56%; animation-delay: 2.8s; }
	.binary-particle:nth-child(27) { left: 68%; animation-delay: 0.1s; }
	.binary-particle:nth-child(28) { left: 73%; animation-delay: 1.9s; }
	.binary-particle:nth-child(29) { left: 81%; animation-delay: 3.1s; }
	.binary-particle:nth-child(30) { left: 89%; animation-delay: 0.5s; }
