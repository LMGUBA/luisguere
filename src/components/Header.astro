<header class="header glass">
	<nav class="nav">
		<div class="logo">
			<a href="#">LUIS GUERE</a>
		</div>

		<button
			class="mobile-menu-btn"
			onclick="toggleMenu()"
			aria-label="Menu"
		>
			<span class="line top"></span>
			<span class="line bottom"></span>
		</button>

		<div class="nav-overlay" id="navOverlay">
			<ul class="nav-links" id="navLinks">
				<li><a href="#inicio" onclick="closeMenu()">Inicio</a></li>
				<li>
					<a href="#servicios" onclick="closeMenu()">Servicios</a>
				</li>
				<li>
					<a href="#tecnologias" onclick="closeMenu()">Tecnolog√≠as</a>
				</li>
				<li>
					<a href="#proyectos" onclick="closeMenu()">Proyectos</a>
				</li>
				<li><a href="#acerca" onclick="closeMenu()">Acerca de</a></li>
				<li><a href="#contacto" onclick="closeMenu()">Contacto</a></li>
			</ul>
		</div>
	</nav>
</header>

<script is:inline>
	function toggleMenu() {
		const navOverlay = document.getElementById("navOverlay");
		const btn = document.querySelector(".mobile-menu-btn");
		const body = document.body;

		navOverlay.classList.toggle("active");
		btn.classList.toggle("active");

		if (navOverlay.classList.contains("active")) {
			body.style.overflow = "hidden";
		} else {
			body.style.overflow = "";
		}
	}

	function closeMenu() {
		const navOverlay = document.getElementById("navOverlay");
		const btn = document.querySelector(".mobile-menu-btn");
		const body = document.body;

		navOverlay.classList.remove("active");
		btn.classList.remove("active");
		body.style.overflow = "";
	}
</script>

<style>
	.header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 100;
		padding: 1rem 2rem;
		background: rgba(255, 255, 255, 0.8);
		backdrop-filter: blur(20px);
		-webkit-backdrop-filter: blur(20px);
		border-bottom: 1px solid var(--glass-border);
		transition: all 0.3s ease;
	}

	@media (prefers-color-scheme: dark) {
		.header {
			background: rgba(0, 0, 0, 0.8);
		}
	}

	.nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 1200px;
		margin: 0 auto;
	}

	.logo a {
		font-family: var(--font-main);
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--text-primary);
		text-decoration: none;
		letter-spacing: -0.01em;
		z-index: 102;
		position: relative;
	}

	.mobile-menu-btn {
		display: none;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		width: 44px; /* Larger touch target */
		height: 44px; /* Larger touch target */
		z-index: 102;
		gap: 6px;
	}

	.line {
		width: 22px;
		height: 2px; /* Thicker lines */
		background-color: var(--text-primary);
		border-radius: 2px; /* Rounded caps */
		transition: all 0.3s cubic-bezier(0.4, 0.01, 0.165, 0.99);
	}

	.mobile-menu-btn.active .top {
		transform: translateY(4px) rotate(45deg);
	}

	.mobile-menu-btn.active .bottom {
		transform: translateY(-4px) rotate(-45deg);
	}

	.nav-overlay {
		display: contents;
	}

	.nav-links {
		display: flex;
		list-style: none;
		gap: 2.5rem;
		margin: 0;
		padding: 0;
	}

	.nav-links a {
		color: var(--text-secondary);
		text-decoration: none;
		font-family: var(--font-main);
		font-size: 0.9rem;
		font-weight: 500;
		transition: color 0.2s ease;
	}

	.nav-links a:hover {
		color: var(--text-primary);
	}

	@media (max-width: 768px) {
		.mobile-menu-btn {
			display: flex;
		}

		.nav-overlay {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100vh;
			background: rgba(255, 255, 255, 0.95);
			backdrop-filter: blur(20px);
			-webkit-backdrop-filter: blur(20px);
			display: flex;
			justify-content: center;
			align-items: center;
			opacity: 0;
			visibility: hidden;
			transition: all 0.4s cubic-bezier(0.4, 0.01, 0.165, 0.99);
			z-index: 101;
		}

		@media (prefers-color-scheme: dark) {
			.nav-overlay {
				background: rgba(0, 0, 0, 0.92);
			}
		}

		.nav-overlay.active {
			opacity: 1;
			visibility: visible;
		}

		.nav-links {
			flex-direction: column;
			align-items: center;
			gap: 2.5rem;
			transform: translateY(20px);
			transition: transform 0.4s cubic-bezier(0.4, 0.01, 0.165, 0.99);
		}

		.nav-overlay.active .nav-links {
			transform: translateY(0);
		}

		.nav-links a {
			font-size: 1.8rem; /* Larger font for mobile menu */
			color: var(--text-primary);
			font-weight: 600;
			letter-spacing: -0.02em;
		}
	}
</style>
