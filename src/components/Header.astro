<style>
	.background-particles {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100vh;
		pointer-events: none;
		z-index: 1;
		overflow: hidden;
	}

	.particle {
		position: absolute;
		width: 4px;
		height: 4px;
		background: radial-gradient(circle, var(--neon-magenta), var(--neon-blue));
		border-radius: 50%;
		animation: floatParticle 8s infinite ease-in-out;
		box-shadow: 0 0 10px rgba(0, 245, 255, 0.6);
	}

	.particle:nth-child(1) { left: 5%; top: 20%; animation-delay: 0s; }
	.particle:nth-child(2) { left: 15%; top: 60%; animation-delay: 1s; }
	.particle:nth-child(3) { left: 25%; top: 30%; animation-delay: 2s; }
	.particle:nth-child(4) { left: 35%; top: 80%; animation-delay: 3s; }
	.particle:nth-child(5) { left: 45%; top: 70%; animation-delay: 1.5s; }
	.particle:nth-child(6) { left: 55%; top: 40%; animation-delay: 2.5s; }
