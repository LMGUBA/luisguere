<style>
	.about {
		padding: 6rem 2rem;
		background: rgba(0, 0, 0, 0.5);
		position: relative;
		overflow: hidden;
	}

	.about::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			radial-gradient(circle at 20% 20%, rgba(0, 255, 136, 0.03) 0%, transparent 50%),
			radial-gradient(circle at 80% 80%, rgba(0, 212, 255, 0.03) 0%, transparent 50%);
		animation: particles 8s linear infinite;
	}

	.container {
		max-width: 1000px;
		margin: 0 auto;
		position: relative;
		z-index: 1;
	}

	.section-title {
		font-family: 'Orbitron', monospace;
		font-size: 2.5rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 3rem;
		color: #00f5ff !important;
		opacity: 1 !important;
		visibility: visible !important;
		display: block !important;
		text-shadow: 0 0 20px rgba(0, 245, 255, 0.6);
	}

	.about-content {
		background: var(--glass-bg);
		backdrop-filter: blur(20px) saturate(180%);
		border: 1px solid var(--glass-border);
		border-radius: 20px;
		padding: 3rem;
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
		transition: all 0.4s ease;
		position: relative;
		overflow: hidden;
	}

	.about-content::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, var(--cyber-cyan), var(--neon-green));
		opacity: 0;
		transition: opacity 0.3s ease;
	}

	.about-content::after {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(0, 245, 255, 0.08), transparent);
		transition: left 0.8s ease;
	}

	.about-content:hover::before {
		opacity: 1;
	}

	.about-content:hover::after {
		left: 100%;
	}

	.about-content:hover {
		transform: translateY(-5px);
		border-color: var(--cyber-cyan);
		box-shadow: 
			0 20px 50px rgba(0, 245, 255, 0.2),
			0 0 40px rgba(0, 255, 136, 0.12);
	}

	.senati-certificate {
		cursor: pointer;
		transition: all 0.3s ease;
		position: relative;
	}

	.senati-certificate:hover {
		background: rgba(0, 245, 255, 0.1);
		border-radius: 8px;
		padding: 0.5rem;
		margin: -0.5rem;
	}

	.certificate-indicator {
		font-size: 0.8rem;
		color: var(--cyber-cyan);
		opacity: 0.8;
		margin-top: 0.3rem;
		display: block;
	}

	/* Modal Styles */
	.certificate-modal {
		display: none;
		position: fixed;
		z-index: 1000;
		left: 0;
		top: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.9);
		backdrop-filter: blur(10px);
	}

	.modal-content {
		position: relative;
		margin: 3% auto;
		width: fit-content;
		max-width: 90%;
		max-height: 85%;
		background: var(--deep-space);
		border: 2px solid var(--cyber-cyan);
		border-radius: 15px;
		box-shadow: 0 0 50px rgba(0, 245, 255, 0.3);
		display: flex;
		flex-direction: column;
	}

	.modal-header {
		padding: 1rem 2rem;
		background: linear-gradient(45deg, var(--cyber-cyan), var(--neon-green));
		border-radius: 13px 13px 0 0;
		display: flex;
		justify-content: space-between;
		align-items: center;
	}

	.modal-title {
		color: white;
		font-family: 'Orbitron', monospace;
		font-size: 1.2rem;
		margin: 0;
	}

	.close-btn {
		background: none;
		border: none;
		color: white;
		font-size: 2rem;
		cursor: pointer;
		padding: 0;
		width: 40px;
		height: 40px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 50%;
		transition: all 0.3s ease;
	}

	.close-btn:hover {
		background: rgba(255, 255, 255, 0.2);
		transform: rotate(90deg);
	}

	.pdf-container {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 1rem;
		min-height: 400px;
	}

	.certificate-image {
		max-width: 100%;
		max-height: 70vh;
		width: auto;
		height: auto;
		object-fit: contain;
		border-radius: 8px;
		box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
	}

	@media (max-width: 768px) {
		.modal-content {
			width: 95%;
			max-width: 95%;
			margin: 5% auto;
		}
		
		.modal-header {
			padding: 0.8rem 1rem;
		}
		
		.modal-title {
			font-size: 1rem;
		}

		.pdf-container {
