<section id="inicio" class="hero">
	<div class="hero-content">
		<div class="hero-image">
			<div class="image-frame">
				<img src="/luis12.png" alt="Luis Guere" class="profile-img" />
				<div class="frame-glow"></div>
			</div>
		</div>
		<h1 class="hero-title" id="typewriter-title"></h1>
		<h2 class="hero-subtitle">Especialista en Ingeniería de Software con Inteligencia Artificial</h2>
		<p class="hero-description">
			Desarrollando tecnología que impacta positivamente en el entorno, explorando la intersección entre IA, software y mecatrónica.
		</p>
		<div class="hero-actions">
			<a href="#contacto" class="cyber-button primary">Contactar</a>
		</div>
	</div>
</section>

<style>
	.hero {
		min-height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 2rem;
		padding-top: 8rem;
		background: linear-gradient(135deg, 
			rgba(0, 245, 255, 0.12) 0%, 
			rgba(255, 0, 230, 0.08) 50%, 
			rgba(0, 162, 255, 0.1) 100%);
		position: relative;
		overflow: hidden;
	}

	.hero::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-image: 
			radial-gradient(circle at 25% 75%, rgba(0, 245, 255, 0.08) 0%, transparent 60%),
			radial-gradient(circle at 75% 25%, rgba(255, 0, 230, 0.06) 0%, transparent 60%);
		animation: float 8s ease-in-out infinite;
	}

	.hero-content {
		text-align: center;
		max-width: 900px;
		z-index: 1;
		position: relative;
	}

	.hero-image {
		margin-bottom: 2.5rem;
		position: relative;
		display: inline-block;
	}

	.image-frame {
		position: relative;
		width: 280px;
		height: 280px;
		margin: 0 auto;
		border-radius: 50%;
		background: linear-gradient(45deg, var(--neon-magenta), var(--neon-blue));
		padding: 4px;
		animation: rotate 20s linear infinite;
	}

	.profile-img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
		position: relative;
		z-index: 2;
	}

	.frame-glow {
		position: absolute;
		top: -10px;
		left: -10px;
		right: -10px;
		bottom: -10px;
		border-radius: 50%;
		background: linear-gradient(45deg, var(--neon-magenta), var(--neon-blue));
		opacity: 0.3;
		filter: blur(15px);
		animation: pulse 3s ease-in-out infinite;
	}

	.hero-title {
		font-family: 'Orbitron', monospace;
		font-size: 4rem;
		font-weight: 900;
		margin-bottom: 1.5rem;
		background: linear-gradient(45deg, var(--neon-magenta), var(--neon-blue));
		background-size: 200% 200%;
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		animation: gradient-flow 3s ease infinite;
		filter: drop-shadow(0 0 20px rgba(0, 245, 255, 0.4));
	}

	.hero-title::after {
		content: '|';
		animation: blink 1s infinite;
	}

	@keyframes blink {
		0%, 50% { opacity: 1; }
		51%, 100% { opacity: 0; }
	}

	.hero-subtitle {
		font-family: 'Exo 2', sans-serif;
		font-size: 1.6rem;
		font-weight: 400;
		margin-bottom: 2rem;
		color: var(--text-secondary);
		line-height: 1.4;
		text-shadow: 0 0 10px rgba(0, 245, 255, 0.2);
	}

	.hero-description {
		font-size: 1.2rem;
		color: var(--text-secondary);
		line-height: 1.7;
		max-width: 650px;
		margin: 0 auto 3rem auto;
		opacity: 0.9;
	}

	.hero-actions {
		display: flex;
		gap: 2rem;
		justify-content: center;
		margin-top: 3rem;
	}

	.cyber-button {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 1rem 2.5rem;
		font-family: 'Exo 2', sans-serif;
		font-weight: 600;
		font-size: 1rem;
		text-decoration: none;
		border-radius: 50px;
		transition: all 0.3s ease;
		position: relative;
		overflow: hidden;
		background: linear-gradient(45deg, var(--neon-magenta), var(--neon-blue));
		color: white;
		border: none;
		box-shadow: 0 4px 15px rgba(0, 162, 255, 0.3);
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.cyber-button::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
		transition: left 0.5s ease;
	}

	.cyber-button:hover::before {
		left: 100%;
	}

	.cyber-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 162, 255, 0.4);
		filter: brightness(1.1);
	}

	@keyframes rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	@keyframes pulse {
		0%, 100% {
			opacity: 0.3;
			transform: scale(1);
		}
		50% {
			opacity: 0.6;
			transform: scale(1.05);
		}
	}

	@keyframes gradient-flow {
		0%, 100% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
	}

	@keyframes float {
		0%, 100% {
			transform: translateY(0px) rotate(0deg);
		}
		50% {
			transform: translateY(-15px) rotate(1deg);
		}
	}

	@media (max-width: 768px) {
		.hero {
			padding: 1rem;
			padding-top: 8rem;
		}

		.hero-title {
			font-size: 2.8rem;
		}
		
		.hero-subtitle {
			font-size: 1.3rem;
		}
		
		.image-frame {
			width: 220px;
			height: 220px;
		}

		.hero-description {
			font-size: 1.1rem;
		}

		.hero-actions {
			flex-direction: column;
			gap: 1.5rem;
			align-items: center;
		}

		.cyber-button {
			padding: 0.9rem 2rem;
			font-size: 0.9rem;
		}
	}

	@media (max-width: 1024px) {
		.hero-title {
			font-size: 3.2rem;
		}

		.hero-subtitle {
			font-size: 1.4rem;
		}

		.image-frame {
			width: 240px;
			height: 240px;
		}

		.hero-description {
			font-size: 1.1rem;
			max-width: 600px;
		}

		.hero-actions {
			gap: 1.5rem;
		}

		.cyber-button {
			padding: 0.95rem 2.2rem;
			font-size: 0.95rem;
		}
	}

	@media (max-width: 480px) {
		.hero {
			padding-top: 7rem;
		}

		.hero-title {
			font-size: 2.2rem;
		}
		
		.hero-subtitle {
			font-size: 1.1rem;
		}
		
		.image-frame {
			width: 180px;
			height: 180px;
		}

		.hero-actions {
			gap: 1rem;
		}

		.cyber-button {
			padding: 0.8rem 1.8rem;
			font-size: 0.85rem;
		}
	}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const text = "Luis Guere";
    const element = document.getElementById('typewriter-title');
    let i = 0;

    function typeWriter() {
        if (i < text.length) {
            element.innerHTML = text.substring(0, i + 1);
            i++;
            setTimeout(typeWriter, 150);
        }
    }

    typeWriter();
});
</script>
