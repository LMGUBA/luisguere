<section id="proyectos" class="projects">
	<div class="container">
		<h2 class="section-title animate-on-scroll">Proyectos</h2>
		<div class="projects-grid">
			<a
				href="https://music-free.up.railway.app"
				target="_blank"
				class="project-card"
			>
				<div class="project-image">
					<img src="/music.svg" alt="App de Música" />
				</div>
				<div class="project-content">
					<h3>App de Música</h3>
					<p>
						Aplicación web de música desarrollada con Python
						FastAPI, HTML, CSS y TailwindCSS. Interfaz moderna y
						responsiva para gestión de música.
					</p>
					<div class="project-tech">
						<span class="tech-tag">Python</span>
						<span class="tech-tag">FastAPI</span>
						<span class="tech-tag">HTML/CSS</span>
						<span class="tech-tag">TailwindCSS</span>
					</div>
				</div>
			</a>
		</div>
	</div>
</section>

<style>
	.projects {
		padding: 8rem 2rem;
		background: var(--bg-color);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-title {
		font-family: var(--font-main);
		font-size: 3.5rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 5rem;
		color: var(--text-primary);
		letter-spacing: -0.02em;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 380px));
		justify-content: center;
		gap: 3rem;
	}

	.project-card {
		background: var(--bg-color);
		border: 1px solid var(--glass-border);
		border-radius: 0; /* Sharp corners */
		overflow: hidden;
		transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
		position: relative;
		text-decoration: none;
		color: inherit;
		display: flex;
		flex-direction: column;
		height: 100%;
		box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
	}

	.project-card:hover {
		transform: translateY(-4px);
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
		border-color: var(--text-primary);
	}

	.project-image {
		height: 280px; /* Increased height */
		background: #fbfbfd; /* Apple-like very light gray */
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 0; /* No padding for edge-to-edge */
		border-bottom: 1px solid var(--glass-border);
		overflow: hidden;
	}

	@media (prefers-color-scheme: dark) {
		.project-image {
			background: #1c1c1e;
		}
	}

	.project-image img {
		width: 100%; /* Fill width */
		height: 100%; /* Fill height */
		max-height: none; /* Remove max-height restriction */
		object-fit: contain; /* Contain to show full image */
		filter: none;
		transition: transform 0.5s cubic-bezier(0.165, 0.84, 0.44, 1);
	}

	.project-card:hover .project-image img {
		transform: scale(1.03);
	}

	.project-content {
		padding: 2.5rem;
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}

	.project-content h3 {
		font-family: var(--font-main);
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 0.8rem;
		color: var(--text-primary);
		letter-spacing: -0.01em;
	}

	.project-content p {
		color: var(--text-secondary);
		line-height: 1.6;
		margin-bottom: 2rem;
		font-size: 1rem;
		font-weight: 400;
		flex-grow: 1;
	}

	.project-tech {
		display: flex;
		flex-wrap: wrap;
		gap: 0.6rem;
		margin-top: auto;
	}

	.tech-tag {
		background: transparent;
		border: 1px solid var(--glass-border);
		color: var(--text-secondary);
		padding: 0.4rem 0.8rem;
		border-radius: 0; /* Sharp corners */
		font-size: 0.75rem;
		font-weight: 500;
		transition: all 0.2s ease;
		letter-spacing: 0.02em;
	}

	@media (prefers-color-scheme: dark) {
		.tech-tag {
			border-color: rgba(255, 255, 255, 0.2);
		}
	}

	.project-card:hover .tech-tag {
		border-color: var(--text-primary);
		color: var(--text-primary);
	}

	@media (max-width: 768px) {
		.projects {
			padding: 5rem 1.5rem;
		}

		.section-title {
			font-size: 2.5rem;
			margin-bottom: 3rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.project-content {
			padding: 2rem;
		}
	}
</style>
