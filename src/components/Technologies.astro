---
import PythonIcon from "./PythonIcon.astro";
import FlaskIcon from "./FlaskIcon.astro";
import HtmlIcon from "./HtmlIcon.astro";
import CssIcon from "./CssIcon.astro";
import JavaScriptIcon from "./JavaScriptIcon.astro";
import CppIcon from "./CppIcon.astro";
import TailwindIcon from "./TailwindIcon.astro";
import GitIcon from "./GitIcon.astro";
import KotlinIcon from "./KotlinIcon.astro";
import GitIcon2 from "./GitIcon2.astro";
import AstroIcon from "./AstroIcon.astro";
import GoogleColabIcon from "./GoogleColabIcon.astro";
---

<section id="tecnologias" class="technologies">
	<div class="container">
		<h2 class="section-title animate-on-scroll">Tecnologías</h2>
		<div class="tech-grid">
			<div class="tech-item glass">
				<div class="tech-icon">
					<HtmlIcon size="40" />
				</div>
				<h3>HTML</h3>
				<p>Desarrollo Web</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<CssIcon size="40" />
				</div>
				<h3>CSS</h3>
				<p>Estilos Web</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<JavaScriptIcon size="40" />
				</div>
				<h3>JavaScript</h3>
				<p>Programación Web</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<PythonIcon size="40" />
				</div>
				<h3>Python</h3>
				<p>Machine Learning & IA</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<KotlinIcon size="40" />
				</div>
				<h3>Kotlin</h3>
				<p>Desarrollo Android</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<CppIcon size="40" />
				</div>
				<h3>C++</h3>
				<p>Programación Sistemas</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<FlaskIcon size="40" />
				</div>
				<h3>Flask</h3>
				<p>Framework Web Python</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<TailwindIcon size="40" />
				</div>
				<h3>Tailwind CSS</h3>
				<p>Framework CSS</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<AstroIcon size="40" />
				</div>
				<h3>Astro</h3>
				<p>Framework Web Moderno</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<GoogleColabIcon size="40" />
				</div>
				<h3>Google Colab</h3>
				<p>Notebooks Jupyter</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<GitIcon size="40" />
				</div>
				<h3>N8N</h3>
				<p>Automatización Workflows</p>
			</div>
			<div class="tech-item glass">
				<div class="tech-icon">
					<GitIcon2 size="40" />
				</div>
				<h3>Git</h3>
				<p>Control de Versiones</p>
			</div>
		</div>
	</div>
</section>

<style>
	.technologies {
		padding: 6rem 2rem;
		background: var(--bg-color);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
	}

	.section-title {
		font-family: var(--font-main);
		font-size: 3rem;
		font-weight: 700;
		text-align: center;
		margin-bottom: 4rem;
		color: var(--text-primary);
		letter-spacing: -0.02em;
	}

	.tech-grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
		gap: 1.5rem;
	}

	.tech-item {
		/* Glass effect inherited */
		padding: 2rem 1.5rem;
		text-align: center;
		transition: all 0.3s ease;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		background: var(--glass-bg);
	}

	.tech-item:hover {
		transform: translateY(-5px);
		box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
		border-color: var(--text-primary);
	}

	.tech-icon {
		margin-bottom: 1rem;
		display: flex;
		align-items: center;
		justify-content: center;
		/* Ensure icons are visible in black/white theme, might need adjustment if they are white-only SVGs */
	}

	.tech-item h3 {
		font-family: var(--font-main);
		font-size: 1.1rem;
		font-weight: 600;
		margin: 0.5rem 0;
		color: var(--text-primary);
	}

	.tech-item p {
		color: var(--text-secondary);
		font-size: 0.9rem;
		margin: 0;
	}

	@media (max-width: 768px) {
		.technologies {
			padding: 4rem 1rem;
		}

		.section-title {
			font-size: 2.2rem;
			margin-bottom: 3rem;
		}

		.tech-grid {
			grid-template-columns: repeat(2, 1fr);
			gap: 1rem;
		}

		.tech-item {
			padding: 1.5rem;
		}
	}
</style>
